<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">

    <title>{% block title %}Car Zone{% endblock %}</title>

    {% block stylesheets %}

        <link rel="stylesheet" href="{{ asset('css/site.css') }}">
        <link rel="stylesheet" href="{{ asset('css/welcome.css') }}">
        <link rel="stylesheet" href="{{ asset('css/car-listings.css') }}">
        <link rel="stylesheet" href="{{ asset('css/login-register.css') }}">
        <link rel="stylesheet" href="{{ asset('css/my-listings.css') }}">
        <link rel="stylesheet" href="{{ asset('css/footer.css') }}">
        <link rel="stylesheet" href="{{ asset('css/navigation.css') }}">
        <link rel="stylesheet" href="{{ asset('css/notifications.css') }}">
        <link rel="stylesheet" href="{{ asset('css/listing-details.css') }}">

    {% endblock %}
    <script src="{{ asset('js/jquery-3.3.1.min.js') }}"></script>
    <script>
        setTimeout(function () {
            $('#notifications').fadeOut();
        }, 2000)
    </script>
</head>

<body>
<div id="container">
    {% block header %}
        <header>

            <nav>
                <a class="active" href="{{ path('project_index') }}">HOME</a>
                <a href="{{ path('post_all') }}">All Posts</a>
                <div id="profile">
                    {% if app.user %}
                        <a href="{{ path('my_posts') }}">My Posts</a>
                        <a href="{{ path('post_create') }}">Create Post</a>
                        <a href="{{ path('user_profile') }}"><img src="{{ asset('uploads/images/users/' ~ app.getUser().image) }}" width="15px" height="15px">  {{ app.user.fullName }}</a>
                        <a href="{{ path('security_logout') }}">LOGOUT</a>
                    {% else %}
                        <a href="{{ path('user_register') }}">REGISTER</a>
                        <a href="{{ path('security_login') }}">LOGIN</a>
                    {% endif %}
                </div>
            </nav>

        </header>
    {% endblock %}

    <div class="container body-container">
        {% block body %}
            <div class="row">
                <div id="main" class="col-sm-9">
                    {% block main %}{% endblock %}
                </div>
            </div>
        {% endblock %}
    </div>

    {% block footer %}
        <footer>
            <div class="container modal-footer">
                <p>&copy; 2019 - Car Zone</p>
            </div>
        </footer>
    {% endblock %}

</div>

{% block javascripts %}
    <script src="{{ asset('js/jquery-3.3.1.min.js') }}"></script>
    <script src="{{ asset('js/moment.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap.js') }}"></script>
    <script src="{{ asset('js/bootstrap-datetimepicker.min.js') }}"></script>
{% endblock %}

</body>

</html>
